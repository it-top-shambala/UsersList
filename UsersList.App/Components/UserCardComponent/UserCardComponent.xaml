<UserControl x:Class="UsersList.App.Components.UserCardComponent.UserCardComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="UserCard">

    <UserControl.Resources>
        <ResourceDictionary Source="UserCardComponentStyles.xaml"/>
    </UserControl.Resources>

    <Border Style="{StaticResource StyleBorder}">
        <Grid DataContext="{Binding ElementName=UserCard}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0"
                   Content="{Binding User.Id}"
                   Style="{StaticResource StyleLabel}" />
            <Label Grid.Row="1"
                   Content="{Binding User.Name}"
                   Style="{StaticResource StyleLabel}" />
            <Label Grid.Row="2"
                   Content="{Binding User.Username}"
                   Style="{StaticResource StyleLabel}" />
        </Grid>
    </Border>


</UserControl>
